{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "pphadke.Thu.06.30.2022.12.10.55.22",
  "parameters": {
    "resourceGroup": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "keyType": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "PrimaryExpiry": {
      "type": "int"
    },
    "SecondaryExpiry": {
      "type": "int"
    },
    "dpsSuffix": {
      "type": "string"
    },
    "dpsIdScope": {
      "type": "securestring"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    }
  },
  "variables": {
    "keyVaultApiVersion": "2015-06-01",
    "tags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]"
    }
  },
  "resources": [
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerPrimaryKey')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), '2020-03-01').primaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Primary owner key for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "UsageType": "PrimaryKey",
        "SecretType": "Key",
        "KeyType": "Primary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerSecondaryKey')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), '2020-03-01').secondaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Primary owner key for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "UsageType": "PrimaryKey",
        "SecretType": "Key",
        "KeyType": "Primary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerSecondaryConnectionString')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('dpsSuffix'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), '2020-03-01').secondaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Secondary owner key for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "UsageType": "SecondaryConnectionString",
        "SecretType": "ConnectionString",
        "KeyType": "Secondary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerPrimaryConnectionString')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('dpsSuffix'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), '2020-03-01').primaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Primary owner key for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "UsageType": "PrimaryConnectionString",
        "SecretType": "ConnectionString",
        "KeyType": "Secondary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-IdScope')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[parameters('dpsIdScope')]",
        "attributes": {
          "enabled": true
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores IdScope for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "UsageType": "IdScope",
        "SecretType": "IdScope",
        "KeyType": "IdScope"
      }
    }
  ]
}