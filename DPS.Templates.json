{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "pphadke.Thu.06.30.2022.12.10.55.22",
  "parameters": {
    "resourceGroup": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "capacity": {
      "type": "int"
    },
    "keyVaultName": {
      "type": "string"
    },
    "iotHubNames": {
      "type": "array"
    },
    "iotHubKeyName": {
      "type": "string",
      "defaultValue": "iothubowner"
    },
    "iotHubSuffix": {
      "type": "string",
      "allowedValues": [
        "azure-devices.net",
        "azure-devices.us",
        "azure-devices.cn"
      ],
      "defaultValue": ".azure-devices.net"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    },
    "expiry": {
      "type": "int"
    },
    "diagnosticSettings": {
      "type": "object",
      "defaultValue": {}
    }
  },
  "variables": {
    "nestedDeploymentApiVersion": "2021-04-01",
    "dpsApiVersion": "2022-02-05",
    "keyVaultSecretApiVersion": "2021-11-01-preview",
    "diagnosticSettingsApiVersion": "2021-05-01-preview",
    "tags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('nestedDeploymentApiVersion')]",
      "name": "iotHubObjectsDeployment",
      "copy": {
        "name": "iotHubObject",
        "count": "[length(parameters('iotHubNames'))]"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [],
          "outputs": {
            "iotHubObjects": {
              "type": "secureObject",
              "value": {
                "name": "[concat(parameters('iotHubNames')[copyIndex()], parameters('iotHubSuffix'))]",
                "connectionString": "[concat('HostName=',  parameters('iotHubNames')[copyIndex()], parameters('iotHubSuffix'), ';SharedAccessKeyName=', parameters('iotHubKeyName'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('iotHubNames')[copyIndex()], parameters('iotHubKeyName')), '2020-03-01').primaryKey)]",
                "location": "[reference(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs', parameters('iotHubNames')[copyIndex()])).location]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Devices/provisioningServices",
      "apiVersion": "[variables('dpsApiVersion')]",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('capacity')]"
      },
      "properties": {
        "iotHubs": "[reference('iotHubObjectsDeployment').outputs.iotHubObjects]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultSecretApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-IdScope')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "value": "[reference(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices', parameters('name')), '2022-02-05').idScope]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('Expiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores IDScope for DPS",
        "ResourceID": "[concat('DPS:', parameters('name'))]",
        "SecretType": "IDScope"
      },
      "dependsOn": [
        "[concat('Microsoft.Devices/ProvisioningServices/',parameters('name'))]"
      ]
    },
    {
      "condition": "[not(empty(parameters('diagnosticSettings')))]",
      "type": "Microsoft.Devices/ProvisioningServices/providers/diagnosticSettings",
      "apiVersion": "[variables('diagnosticSettingsApiVersion')]",
      "name": "[concat(parameters('name'), '/microsoft.insights/DiagnosticSettings')]",
      "dependsOn": [
        "[parameters('name')]"
      ],
      "properties": {
        "eventHubAuthorizationRuleId": "[concat('/subscriptions/', parameters('diagnosticSettings').SubscriptionId, '/resourceGroups/', parameters('diagnosticSettings').ResourceGroup, '/providers/Microsoft.EventHub/namespaces/', parameters('diagnosticSettings').EventHubNamespace, '/authorizationrules/RootManageSharedAccessKey')]",
        "eventHubName": "[parameters('diagnosticSettings').EventHub]",
        "metrics": [
          {
            "category": "AllMetrics",
            "enabled": true
          }
        ]
      }
    }
  ]
}