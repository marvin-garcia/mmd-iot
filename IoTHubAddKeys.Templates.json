{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "pphadke.Thu.06.30.2022.12.10.55.22",
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "resourceGroup": {
      "type": "string"
    },
    "iotEndpoint": {
      "type": "string"
    },
    "keyType": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "PrimaryExpiry": {
      "type": "int"
    },
    "SecondaryExpiry": {
      "type": "int"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    }
  },
  "variables": {
    "iotVersion": "2020-08-01",
    "keyVaultApiVersion": "2015-06-01",
    "tags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]"
    }
  },
  "resources": [
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-PrimaryKey')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), '2020-03-01').primaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Primary owner key for IoTHub",
        "ResourceID": "[concat('IoTHub:', parameters('name'))]",
        "UsageType": "PrimaryKey",
        "SecretType": "Key",
        "KeyType": "Primary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-SecondaryKey')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), '2020-03-01').secondaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Secondary owner key for IoTHub",
        "ResourceID": "[concat('IoTHub:', parameters('name'))]",
        "UsageType": "SecondaryKey",
        "SecretType": "Key",
        "KeyType": "Secondary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-PrimaryConnectionString')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('iotEndpoint'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), '2020-03-01').primaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Primary owner key for IoTHub",
        "ResourceID": "[concat('IoTHub:', parameters('name'))]",
        "UsageType": "PrimaryConnectionString",
        "SecretType": "ConnectionString",
        "KeyType": "Primary",
        "AuthRule": "Owner"
      }
    },
    {
      "location": "[resourceGroup().location]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-SecondaryConnectionString')]",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('iotEndpoint'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), '2020-03-01').secondaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": {
        "Stamp": "[parameters('stampName')]",
        "Environment": "[parameters('envName')]",
        "OwningTeam": "[parameters('owningTeam')]",
        "Build": "[parameters('version')]",
        "Description": "Stores Secondary owner key for IoTHub",
        "ResourceID": "[concat('IoTHub:', parameters('name'))]",
        "UsageType": "SecondaryConnectionString",
        "SecretType": "ConnectionString",
        "KeyType": "Secondary",
        "AuthRule": "Owner"
      }
    }
  ]
}