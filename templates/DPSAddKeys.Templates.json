{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroup": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "keyType": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "PrimaryExpiry": {
      "type": "int"
    },
    "SecondaryExpiry": {
      "type": "int"
    },
    "dpsSuffix": {
      "type": "string"
    },
    "dpsIdScope": {
      "type": "securestring"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    }
  },
  "variables": {
    "dpsApiVersion": "2022-02-05",
    "keyVaultApiVersion": "2015-06-01",
    "commonTags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]",
      "ResourceID": "[concat('DPS:', parameters('name'))]"
    },
    "ownerPrimaryKeyTags": {
      "Description": "Stores Primary owner key for DPS",
      "UsageType": "PrimaryKey",
      "SecretType": "Key",
      "KeyType": "Primary",
      "AuthRule": "Owner"
    },
    "ownerSecondaryKeyTags": {
      "Description": "Stores Secondary owner key for DPS",
      "UsageType": "SecondaryKey",
      "SecretType": "Key",
      "KeyType": "Secondary",
      "AuthRule": "Owner"
    },
    "ownerSecondaryConnectionStringTags": {
      "Description": "Stores Secondary owner connection string for DPS",
      "UsageType": "SecondaryConnectionString",
      "SecretType": "ConnectionString",
      "KeyType": "Secondary",
      "AuthRule": "Owner"
    },
    "ownerPrimaryConnectionStringTags": {
      "Description": "Stores Primary owner connection string for DPS",
      "UsageType": "PrimaryConnectionString",
      "SecretType": "ConnectionString",
      "KeyType": "Secondary",
      "AuthRule": "Owner"
    },
    "idScopeTags": {
      "Description": "Stores IdScope for DPS",
      "UsageType": "IdScope",
      "SecretType": "IdScope",
      "KeyType": "IdScope"
    }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerPrimaryKey')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), variables('ownerPrimaryKeyTags'))]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), variables('dpsApiVersion')).primaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerSecondaryKey')]",
      "location": "[parameters('location')]",
      "tags": "[variables('ownerSecondaryKeyTags')]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), variables('dpsApiVersion')).secondaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerSecondaryConnectionString')]",
      "location": "[parameters('location')]",
      "tags": "[variables('ownerSecondaryConnectionStringTags')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('dpsSuffix'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), variables('dpsApiVersion')).secondaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-OwnerPrimaryConnectionString')]",
      "location": "[parameters('location')]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('dpsSuffix'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/ProvisioningServices/keys', parameters('name'), parameters('keyType')), variables('dpsApiVersion')).primaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      },
      "tags": "[variables('ownerprimaryConnectionStringTags')]"
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-IdScope')]",
      "location": "[parameters('location')]",
      "tags": "[variables('idScopeTags')]",
      "properties": {
        "value": "[parameters('dpsIdScope')]",
        "attributes": {
          "enabled": true
        }
      }
    }
  ]
}