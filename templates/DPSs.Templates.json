{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "count": {
      "type": "int"
    },
    "startIndex": {
      "type": "int"
    },
    "location": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "capacity": {
      "type": "int"
    },
    "iotHubNames": {
      "type": "array"
    },
    "iotHubKeyName": {
      "type": "string",
      "defaultValue": "iothubowner"
    },
    "iotHubSuffix": {
      "type": "string",
      "allowedValues": [
        ".azure-devices.net",
        ".azure-devices.us",
        ".azure-devices.cn"
      ],
      "defaultValue": ".azure-devices.net"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    },
    "diagnosticSettings": {
      "type": "object",
      "defaultValue": {}
    }
  },
  "variables": {
    "nestedDeploymentApiVersion": "2021-04-01",
    "dpsApiVersion": "2022-02-05",
    "iotHubApiVersion": "2021-07-02",
    "diagnosticSettingsApiVersion": "2021-05-01-preview",
    "tags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('nestedDeploymentApiVersion')]",
      "name": "iotHubObjectsDeployment",
      "copy": {
        "name": "iotHubsLoop",
        "mode": "parallel",
        "count": "[length(parameters('iotHubNames'))]"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [],
          "outputs": {
            "iotHubObjects": {
              "type": "secureObject",
              "value": {
                "name": "[concat(parameters('iotHubNames')[copyIndex()], parameters('iotHubSuffix'))]",
                "connectionString": "[concat('HostName=',  parameters('iotHubNames')[copyIndex()], parameters('iotHubSuffix'), ';SharedAccessKeyName=', parameters('iotHubKeyName'), ';SharedAccessKey=', listkeys(resourceId('Microsoft.Devices/Iothubs/Iothubkeys', parameters('iotHubNames')[copyIndex()], parameters('iotHubKeyName')), '2020-03-01').primaryKey)]",
                "location": "[reference(resourceId('Microsoft.Devices/Iothubs', parameters('iotHubNames')[copyIndex()]), variables('iotHubApiVersion')).location]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Devices/provisioningServices",
      "apiVersion": "[variables('dpsApiVersion')]",
      "copy": {
        "name": "dpscopy",
        "count": "[parameters('count')]"
      },
      "name": "[concat(parameters('namePrefix'), add(parameters('startIndex'), copyIndex()))]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('capacity')]"
      },
      "properties": {
        "iotHubs": "[reference('iotHubObjectsDeployment').outputs.iotHubObjects.value]"
      }
    },
    {
      "condition": "[not(empty(parameters('diagnosticSettings')))]",
      "type": "Microsoft.Devices/ProvisioningServices/providers/diagnosticSettings",
      "apiVersion": "[variables('diagnosticSettingsApiVersion')]",
      "copy": {
        "name": "dpsdiagnosticscopy",
        "count": "[parameters('count')]"
      },
      "name": "[concat(parameters('namePrefix'), add(parameters('startIndex'), copyIndex()), '/microsoft.insights/DiagnosticSettings')]",
      "dependsOn": [
        "[concat(parameters('namePrefix'), add(parameters('startIndex'), copyIndex()))]"
      ],
      "properties": {
        "eventHubAuthorizationRuleId": "[concat('/subscriptions/', parameters('diagnosticSettings').SubscriptionId, '/resourceGroups/', parameters('diagnosticSettings').ResourceGroup, '/providers/Microsoft.EventHub/namespaces/', parameters('diagnosticSettings').EventHubNamespace, '/authorizationrules/RootManageSharedAccessKey')]",
        "eventHubName": "[parameters('diagnosticSettings').EventHub]",
        "metrics": [
          {
            "category": "AllMetrics",
            "enabled": true
          }
        ]
      }
    }
  ]
}