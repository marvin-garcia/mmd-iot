{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "resourceGroup": {
      "type": "string"
    },
    "iotEndpoint": {
      "type": "string"
    },
    "keyType": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "PrimaryExpiry": {
      "type": "int"
    },
    "SecondaryExpiry": {
      "type": "int"
    },
    "envName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "owningTeam": {
      "type": "string"
    }
  },
  "variables": {
    "iotHubApiVersion": "2021-07-02",
    "keyVaultApiVersion": "2015-06-01",
    "commonTags": {
      "Stamp": "[parameters('stampName')]",
      "Environment": "[parameters('envName')]",
      "OwningTeam": "[parameters('owningTeam')]",
      "Build": "[parameters('version')]",
      "ResourceID": "[concat('IoTHub:', parameters('name'))]"
    },
    "primaryKeyTags": {
      "Description": "Stores Primary owner key for IoTHub",
      "UsageType": "PrimaryKey",
      "SecretType": "Key",
      "KeyType": "Primary",
      "AuthRule": "Owner"
    },
    "secondaryKeyTags": {
      "Description": "Stores Secondary owner key for IoTHub",
      "UsageType": "SecondaryKey",
      "SecretType": "Key",
      "KeyType": "Secondary",
      "AuthRule": "Owner"
    },
    "primaryConnectionStringTags": {
      "Description": "Stores Primary owner key for IoTHub",
      "UsageType": "PrimaryConnectionString",
      "SecretType": "ConnectionString",
      "KeyType": "Primary",
      "AuthRule": "Owner"
    },
    "secondaryConnectionStringTags": {
      "Description": "Stores Secondary owner key for IoTHub",
      "UsageType": "SecondaryConnectionString",
      "SecretType": "ConnectionString",
      "KeyType": "Secondary",
      "AuthRule": "Owner"
    }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-PrimaryKey')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), variables('primaryKeyTags'))]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), variables('iotHubApiVersion')).primaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-SecondaryKey')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), variables('secondaryKeyTags'))]",
      "properties": {
        "value": "[listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), variables('iotHubApiVersion')).secondaryKey]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-PrimaryConnectionString')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), variables('primaryConnectionStringTags'))]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('iotEndpoint'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), variables('iotHubApiVersion')).primaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('PrimaryExpiry'))]"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('keyVaultApiVersion')]",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('name'), '-', parameters('keyType'), '-SecondaryConnectionString')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('commonTags'), variables('secondaryConnectionStringTags'))]",
      "properties": {
        "value": "[concat('HostName=', parameters('name'), parameters('iotEndpoint'), ';SharedAccessKeyName=', parameters('keyType'), ';SharedAccessKey=', listkeys(resourceId(parameters('resourceGroup'), 'Microsoft.Devices/Iothubs/Iothubkeys', parameters('name'), parameters('keyType')), variables('iotHubApiVersion')).secondaryKey)]",
        "attributes": {
          "enabled": true,
          "exp": "[int(parameters('SecondaryExpiry'))]"
        }
      }
    }
  ]
}